<h3> <%=link_to port.title, portfolio_show_path(port) %> </h3>
  <p> <%=port.subtitle %> </p>
  <p> <%=port.body %> </p>
  <p> <%=image_tag port.thumb_image unless port.thumb_image.nil? %> </p>
  <%= link_to "Edit", edit_portfolio_path(port) %>
  <%= link_to 'Delete', portfolio_path(port), method: :delete, data: { confirm: 'You positive you want to delete this?' } %>
  <hr width="75%" align="left" color="blue">