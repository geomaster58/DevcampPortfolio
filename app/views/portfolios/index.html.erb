<h1>Portfolio Items!!</h1>

<h2>Heres some items:</h2>


<%= link_to "Create new Item!!", new_portfolio_path %>

<% @port.each do |x| %>

  <p> <%=link_to x.title, portfolio_path(x) %> </p>
  <p> <%=x.subtitle %> </p>
  <p> <%=x.body %> </p>
  <p> <%=image_tag x.thumb_image unless x.thumb_image.nil? %> </p>
  <%= link_to "Edit", edit_portfolio_path(x) %>
  <%= link_to 'Delete', portfolio_path(x), method: :delete, data: { confirm: 'You positive you want to delete this?' } %>
  <hr>


<% end %>

